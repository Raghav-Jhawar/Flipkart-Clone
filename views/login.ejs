<body>
    <!-- HEADER OF THE WEBSITE -->
    <header class="header">
        <h1>Welcome To Login Page</h1>
    </header>

    <div class="container">
        <form action="/" method="post" class="form">
            <div class="label">
                <label for="emai">E-mail:</label>
            </div>
            
            <input type="email" name="email" id="email" placeholder="Enter your E-mail" autocomplete="off">

            <div class="label">
                <label for="emai">Password:</label>
            </div>

            <input type="password" name="password" id="password" placeholder="Enter the password">
            
            <div class="button">
                <button class="btn" type="submit" name="button">Login</button>
                <button class="btn" type="submit" name="button">Sign Up</button>
            </div>
            
        </form>
    </div>



